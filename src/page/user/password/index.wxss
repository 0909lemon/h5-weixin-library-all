page{
	background-color: #fff;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	color: #3d667a;
}
.topImg{
	width: 100%;
	height: 168rpx;
}

.list{
	padding: 0 24rpx;
	margin-top: 100rpx;
}

.item{
	height: 60rpx;
	line-height: 60rpx;
	display: flex;
	border-bottom: .5rpx solid #3d667a;
	margin-bottom: 40rpx;
}

.item:nth-child(2){
	border-bottom: none;
}
.item .iconfont{
	font-size: 34rpx;
	margin-right: 26rpx;
	vertical-align: 1%;
}

.item input{
	height: 100%;
}

.btn{
	height: 66rpx;
	line-height: 66rpx;
	font-size: 24rpx;
	text-align: center;
	margin-top: 19rpx;
}